# HILLIA Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection (required)
# Get from MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/
MONGO_URL=

# Database name (required)
DB_NAME=hillia_production

# CORS Origins - comma-separated list of allowed frontend URLs (required)
# Example: https://hillia.vercel.app,https://www.hillia.in
CORS_ORIGINS=

# Admin Credentials (required for admin interface)
# Username: Choose your own
ADMIN_USERNAME=

# Password Hash: Generate with:
# python3 -c "import hashlib; print(hashlib.sha256('YOUR_PASSWORD'.encode()).hexdigest())"
ADMIN_PASSWORD_HASH=
